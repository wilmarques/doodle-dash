  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug mode",
      "type": "dart",
      "request": "launch",
      "flutterMode": "debug",
      "toolArgs": [
        "--web-hostname",
        "0.0.0.0",
        "--web-port",
        "8080",
        "--web-browser-flag",
        "--auto-open-devtools-for-tabs",
        "--web-browser-flag",
        "--start-maximized",
        // "--dds-port", "35000" // Not working currently - It's Flutter Web bug (issue #84179)
        // "--host-vmservice-port", "35000"
        // "--device-vmservice-port", "35000"
      ]
    },
    {
      "name": "Profile mode",
      "request": "launch",
      "type": "dart",
      "flutterMode": "profile"
    },
    {
      "name": "Release mode",
      "request": "launch",
      "type": "dart",
      "flutterMode": "release"
    },
  ]
}
